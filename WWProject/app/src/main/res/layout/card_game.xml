<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fef8f4">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:textSize="30sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

                <Button
                    android:id="@+id/word_one"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="#fef8f4"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="4"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/mean_one"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="1"
            android:layout_column="0"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/word_two"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="1"
            android:layout_column="4"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/mean_two"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="2"
            android:layout_column="0"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/word_there"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="2"
            android:layout_column="4"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/mean_there"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="3"
            android:layout_column="0"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/word_four"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />


        </LinearLayout>


        <LinearLayout
            android:layout_row="3"
            android:layout_column="4"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/mean_four"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="4"
            android:layout_column="0"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/word_five"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="4"
            android:layout_column="4"
            android:background="#aa6f6f"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/mean_five"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#fef8f4"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="1" />

        </LinearLayout>



    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnNext"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:text="다음으로"/>

        <Button
            android:id="@+id/btnResult"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:visibility="invisible"
            android:text="결과보기"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_row="1"
            android:layout_column="0"
            android:visibility="invisible"
            android:text="총 번 틀렸습니다."
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvResultC"
            android:layout_row="0"
            android:layout_column="0"
            android:visibility="invisible"
            android:text="총 번 틀렸습니다."
            android:textSize="30dp"
            android:textStyle="bold"/>


    </GridLayout>

</LinearLayout>